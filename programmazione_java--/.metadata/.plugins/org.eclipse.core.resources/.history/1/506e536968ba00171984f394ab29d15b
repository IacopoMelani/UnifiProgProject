long millisecondi = 30000000;

double s = millisecondi / 1000;
int seconds = (int) s % 60;

double m = s / 60;
int minuts = (int) m % 60;

double h = m / 60;
int hours = (int) h / 24;

double d = h / 365;
int days = (int) d % 365;

System.out.println("d: " + days + " h: " + h + " m: " + minuts + " s: " + seconds);


