long decimal(int[] a) {
	int n = a.length;
	long decimal = 0;
	decimal = 0;
	for (int i = n - 1; i != 0; i--) {
		decimal = decimal + potenza(a[i], i);
	}
	return decimal;
}

long potenza(int num, int i) {
	
	for (int k = 0; i < i; k++) {
		num = num * 2;
	}
	return num;
}

int[] a = {0,1,1,1};

System.out.println(decimal(a));
