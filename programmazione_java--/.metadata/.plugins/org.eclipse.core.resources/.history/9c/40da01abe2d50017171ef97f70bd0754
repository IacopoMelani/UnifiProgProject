long decimal(int[] a) {
	int n = a.length;
	long decimal = 0;
	decimal = 0;
	for (int i = n - 1; i >= 0; i--) {
		decimal = decimal + potenza(a[i], (n - 1) - i);
	}
	return decimal;
}

int potenza(int num, int i) {
	int base = 1;
	if (i == 0  && num == 1)
		return 1;
	for (int k = 0; k < i; k++) {		//ciclo per trasformarare 2^3 in una base 2*2*2 che successivamente moltiplico con 
		base = base * 2;
	}
	return base * num;
}

int[] a = {1, 0, 0, 0, 0, 0,0,0};

System.out.println(decimal(a));
