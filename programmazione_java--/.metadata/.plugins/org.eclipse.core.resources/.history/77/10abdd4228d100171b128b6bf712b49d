int harmonicSum(int x) {
	double sum = 0;
	int i = 0;
	while (sum < x) {
		i++;
		sum = sum + harmonic(i);
		
	}
	return i;
}

// funzione che dato un valore k calcola la somma armonica per i = 1 fino a k di 1/
double harmonic(int k) {
	int i = 1;
	double sum = 0;
	while (i <= k) {
		sum = sum + 1.0 / i;
		i++;
	}
	return sum;
}

System.out.println(harmonicSum(3));
