long decimal(int[] a) {
	int n = a.length;
	long decimal = 0;
	decimal = 0;
	for (int i = n - 1; i != 0; i--) {
		decimal = decimal + potenza(a[i], i, n-1);
	}
	return decimal;
}

long potenza(int num, int i ,int h) {
	
	for (int k = h - i; k != 0; k--) {
		num = num * 2;
	}
	return num;
}

int[] a = {1,0,0,0};

System.out.println(decimal(a));
