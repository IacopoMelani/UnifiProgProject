long decimal(int[] a) {
	int n = a.length;
	long decimal = 0;
	decimal = 0;
	for (int i = n - 1; i >= 0; i--) {
		decimal = decimal + potenza(a[i], (n - 1) - i);
	}
	return decimal/2;
}

int potenza(int num, int i) {
	int base = 1;
	for (int k = 0; k <= i; k++) {
		base = base * 2;
	}
	return num * base;
}

int[] a = {1,1, 1, 1, 1};

System.out.println(decimal(a));
