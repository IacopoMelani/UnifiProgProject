long decimal(int[] a) {
	int n = a.length;
	long decimal = 0;
	decimal = 0;
	for (int i = n - 1; i >= 0; i--) {
		decimal = decimal + potenza(a[i], i, a);
	}
	return decimal;
}

long potenza(int num, int n, int a) {
	n = a -
	for (int i = 0; i < n; i++) {
		num = num * 2;
	}
	return num;
}

int[] a = {0,1,1,1};

System.out.println(decimal(a));
